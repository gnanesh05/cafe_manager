<!DOCTYPE html>
<html>
  <head>
    <title>CafeManager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <div class="container-top">
                                                                        
  <div class="nav-main">
   <%if  @current_user && @current_user.role == "user"%>
        <%= link_to "My Orders", orders_path %>
        <%= link_to "sign-out" ,destroy_session_path, method:"delete"%>
      <%else%>
       <%= link_to "create account" ,users_path%>
        <%= link_to "login" ,sessions_path%>
   <%end%>  
   <%= link_to "Home", "/" %>
   <%= link_to "Menus", menu_items_path %>
   <span class="nav-head">
     <p>Beach view Restaurant </p>
   </span>
  </div>

    <%if flash[:error] %>
      <p style="color:darkred;margin-left:30%;"> 
        <%= flash[:error] %>
      </p>
    <%end%>

    <%if flash[:notice] %>
      <p style="color:green;margin-left:30%;"> 
        <%= flash[:notice] %>
      </p>
    <%end%>
    <%= yield %>
  </body>
</html>
